{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["playwright.config.js", "tests/**/*.js"],
      "env": {
        "node": true
      }
    },
    {
      "files": ["service-worker.js"],
      "env": {
        "serviceworker": true
      }
    }
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  },
  "globals": {
    "L": "readonly"
  }
}
